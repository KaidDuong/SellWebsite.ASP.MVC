@using SellWebsite.Ver1._0.Models
@model IEnumerable<SanPham>

<div class=" h_menu4">
    <ul class="memenu skyblue">
        <li class="showhide" style="display: none;"><span class="title">Home</span><span class="icon1"></span><span class="icon2"></span></li>
        <li class="active grid" style="display: inline;"><a class="color8" href="@Url.Action("Index","Home")">Home</a></li>
        @foreach (var groupItem in Model.GroupBy(r => r.LoaiSanPham))
        {
            if (groupItem.Key != null)
            {
                <li style="display: inline;">
                    <a class="color1" href="#">@groupItem.Key.TenLoai</a>
                    <div class="mepanel" style="display: none; opacity: 1;">
                        <div class="row">
                            <div class="col1">
                                <div class="h_nav">
                                    <ul>
                                        @foreach (var item in groupItem.GroupBy(r => r.NhaSanXuat))
                                        {
                                            if (item.Key != null)
                                            {
                                                //dieu huong den trang san pham
                                            <li><a href="@Url.Action("Product","Product",new { @maLoaiSP=groupItem.Key.MaLoaiSP ,@maNSX=item.Key.MaNSX })">@item.Key.TenNSX</a></li>

                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </li>
            }
        }
        <li class="grid" style="display: inline;">

            <a class="color2" href="#"> Trademark </a>
            <div class="mepanel" style="display: none; opacity: 1;">
                <div class="row">
                    @foreach (var groupItem in Model.GroupBy(k => k.LoaiSanPham))
                    {
                        if (groupItem.Key != null)
                        {
                    <div class="col1">
                        <div class="h_nav">
                            <h4>@groupItem.Key.TenLoai</h4>
                            <ul>
                               @foreach (var item in groupItem.GroupBy(k => k.NhaSanXuat))
                               {

                                   if (item.Key != null)
                                   {
                                <li><a href="@Url.Action("Product","Product", new { @maLoaiSP= groupItem.Key.MaLoaiSP,
                                            @maNSX =item.Key.MaNSX })">@item.Key.TenNSX</a></li>
                                   }
                               }
                            </ul>
                        </div>
                    </div>
                        }
                    }
                </div>
            </div>
        </li>

        <li style="display: inline;"><a class="color4" href="blog.html">Introduce</a></li>
        <li style="display: inline;"><a class="color6" href="contact.html">Contact Us</a></li>
    </ul>
</div>
