@using SellWebsite.Ver1._0.Models
<div class="header-top">
    <div class="container">
        <div class="search">
            <form>
                <input type="text" value="Search " onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                <input type="submit" value="Go">
            </form>
        </div>
        <div class="header-left">
            <ul>
                @if (Session["User"] != null && Session["User"] != "")
                {
                    ThanhVien tv = Session["User"] as ThanhVien;
                <li> <span> Hello User : @tv.HoTen </span></li>
                <li>  @Html.ActionLink("Logout","Logout","Home")  </li >

                }
                    else
                    {
                    <li style="display:inline"><a id="btnLogin" href="#">Login</a></li>
                    <li><a href="@Url.Action("Register","Home")">Register</a></li>
                    }

            </ul>
            <div class="cart box_1">
                <a href="checkout.html">
                    <h3>
                        <div class="total">
                            <span class="simpleCart_total">$0.00</span> (<span id="simpleCart_quantity" class="simpleCart_quantity">0</span> items)
                        </div>
                        <img src="~/Content/images/cart.png" alt="">
                    </h3>
                </a>
                <p><a href="javascript:;" class="simpleCart_empty">Empty Cart</a></p>

            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>

@*Login-FORM*@
<div >
    <div class="login-form" id="login-form">

        <div id="popup-login">
            <div style="clear:both ;text-align:right; margin-bottom:0;">
                <span id="close-form" class="btn btn-danger">X</span>
            </div>
            <div class="container">
                <div class="account">
                    <h1 style="color :blue;">Account</h1>
                    <div class="account-pass">
                        <div class="col-md-8 account-top">
                            @using (Html.BeginForm("Login","Home"))
                            {

                                <div>
                                    <input name="txtEmail" type="text" class="email" placeholder="Email Address " required="">

                                </div>
                                <div>
                                    <input name="txtPassword" type="password" class="password" required="" placeholder="Password ">
                                </div>
                                <input type="submit" value="Login">
                                <input type="submit" value="Register">
                            }

                        </div>

                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    #btnLogin {
        float: left;
    }

    .content {
        height: 500px;
    }

    #close-form {
        color: white;
    }

    #popup-login {
        position: fixed;
        z-index: 99;
        background-color: rgba(0, 0, 0,0.7);
        top: 0;
        left: 0%;
        width: 100%;
        height: 100%;
        display: none;
    }

    #login-form {
        background: #3a3a46;
        cursor: pointer;
    }
</style>

@*su dung jquery de hien thi popup-login*@
<script type="text/javascript">
    $("#btnLogin").click(function () {
        @* hien thi form*@
        $("#popup-login").show();
        @* an form*@
        $("#close-form").click(HideForm);
        function HideForm() {
            $("#popup-login").hide();
        }


    });

</script>