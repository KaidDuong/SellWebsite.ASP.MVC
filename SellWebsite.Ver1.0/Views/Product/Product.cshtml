
@model IEnumerable<SellWebsite.Ver1._0.Models.SanPham>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="col-md-9 product1">
    <div class=" bottom-product">
        @foreach (var item in Model.OrderBy(k=>k.DonGia))
        {
            <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                <div class="product-at ">
                    <a href="@Url.Action("XemChiTiet","Product",new { @id= item.MaSP })">
                        <img class="img-responsive" src="@Url.Content("~/Content/productImages/"+ item.HinhAnh) "  alt="" style="width:150px;height:150px;">
                        <div class="pro-grid">
                            <span class="buy-in">Buy Now</span>
                        </div>
                    </a>
                </div>
                <p class="tun" style="color:blue">@item.TenSP</p>
                <a href="#" class="item_add"><p class="number item_price"><i> </i>@item.DonGia.Value.ToString("#,##") VND</p></a>
            </div>
        }


        <div class="clearfix"> </div>
    </div>


</div>

