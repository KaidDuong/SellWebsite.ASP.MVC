@using SellWebsite.Ver1._0.Models
@model IEnumerable<SanPham>


        @foreach (var item in Model.Take<SanPham>(3))
        {
            
            <div class="col-md-4 grid-top">
                <a href="single.html" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src=@Url.Content("~/Content/productImages/"+item.HinhAnh ) alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-left    b-delay03 " style="text-align:left; font-size:15pt;">
                            <span style="text-align:left; position:absolute;top:1%;left:1%;font-size:15pt;">@Html.Raw(item.CauHinh)</span>
                        </h3>
                    </div>
                </a>


                <p><a href="single.html">@item.TenSP</a></p>
            </div>
        }
        <div class="clearfix"> </div>
    
