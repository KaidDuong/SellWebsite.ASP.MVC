@* Cach moi ngan hon *@
@model IEnumerable<SellWebsite.Ver1._0.Models.SanPham>





    <div class="col-md-6 men">
        <a href="@Url.Action("XemChiTiet","Product", new { @id = Model.ElementAt(4).MaSP })" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src= @Url.Content("~/Content/productImages/" + Model.ElementAt(4).HinhAnh) alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-top top-in   b-delay03 ">
                    <span>@Model.ElementAt(4).TenSP</span>
                </h3>
            </div>
        </a>


    </div>
    <div class="col-md-6">
        <div class="col-md1 ">
            <a href="@Url.Action("XemChiTiet","Product",new { @id = Model.ElementAt(3).MaSP })" class="b-link-stripe b-animate-go  thickbox">
                <img class="img-responsive" src= @Url.Content("~/Content/productImages/" + Model.ElementAt(3).HinhAnh ) alt="">
                <div class="b-wrapper">
                    <h3 class="b-animate b-from-top top-in1   b-delay03 ">
                        <span>@Model.ElementAt(5).TenSP</span>
                    </h3>
                </div>
            </a>

        </div>
        <div class="col-md2">
            @foreach (var item in Model.Take(2))
            {
            <div class="col-md-6 men1">
                <a href="@Url.Action("XemChiTiet","Product",new { @id=item.MaSP})" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src= @Url.Content("~/Content/productImages/" + item.HinhAnh) alt="">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-top top-in2   b-delay03 ">
                            <span>@item.TenSP</span>
                        </h3>
                    </div>
                </a>

            </div>
            }

            <div class="clearfix"> </div>
        </div>
</div>
    
